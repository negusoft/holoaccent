<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Default themes -->
    <style name="Theme.HoloAccent" parent="android:Theme.Material">
        <item name="accentColor">@color/ha__accent_default</item>

        <item name="accentColorReference">@color/ha__accent</item>
        <item name="accentColorDarkReference">@color/ha__accent_dark</item>
        <item name="accentColorDrawable">@drawable/ha__solid_accent</item>
        <item name="accentColorDarkDrawable">@drawable/ha__solid_accent_dark</item>

        <item name="android:colorAccent">@color/ha__accent</item>
        <item name="android:colorPrimaryDark">@android:color/black</item>
        <item name="android:colorEdgeEffect">?android:colorAccent</item>

        <item name="buttonStyleColoredInverse">?android:attr/buttonStyle</item>

        <item name="android:actionBarStyle">@style/HoloAccent.ActionBar.Solid</item>
        <item name="android:datePickerStyle">@style/HoloAccent.DatePicker</item>
    </style>

    <style name="Theme.HoloAccent.Light" parent="android:Theme.Material.Light">
        <item name="accentColor">@color/ha__accent_default</item>

        <item name="accentColorReference">@color/ha__accent</item>
        <item name="accentColorDarkReference">@color/ha__accent_dark</item>
        <item name="accentColorDrawable">@drawable/ha__solid_accent</item>
        <item name="accentColorDarkDrawable">@drawable/ha__solid_accent_dark</item>

        <item name="android:colorAccent">@color/ha__accent</item>
        <item name="android:colorPrimary">#dddddd</item>
        <item name="android:colorPrimaryDark">@android:color/black</item>
        <item name="android:colorEdgeEffect">?android:colorAccent</item>

        <item name="buttonStyleColoredInverse">?android:attr/buttonStyle</item>

        <item name="android:actionBarStyle">@style/HoloAccent.ActionBar.Solid</item>
        <item name="android:datePickerStyle">@style/HoloAccent.DatePicker</item>
    </style>

    <style name="Theme.HoloAccent.Light.DarkActionBar" parent="android:Theme.Material.Light.DarkActionBar">
        <item name="accentColor">@color/ha__accent_default</item>

        <item name="accentColorReference">@color/ha__accent</item>
        <item name="accentColorDarkReference">@color/ha__accent_dark</item>
        <item name="accentColorDrawable">@drawable/ha__solid_accent</item>
        <item name="accentColorDarkDrawable">@drawable/ha__solid_accent_dark</item>

        <item name="android:colorAccent">@color/ha__accent</item>
        <item name="android:colorPrimaryDark">@android:color/black</item>
        <item name="android:colorEdgeEffect">?android:colorAccent</item>

        <item name="buttonStyleColoredInverse">?android:attr/buttonStyle</item>

        <item name="android:actionBarStyle">@style/HoloAccent.ActionBar.Solid</item>
        <item name="android:datePickerStyle">@style/HoloAccent.DatePicker</item>
    </style>

    <!-- Colored ActionBar themes -->
    <style name="Theme.HoloAccent.ColoredActionBar">
        <item name="android:colorPrimary">@color/ha__accent_dark</item>
    </style>
    <style name="Theme.HoloAccent.ColoredActionBar.Inverse">
        <item name="android:colorPrimary">@color/ha__accent_dark</item>
        <item name="android:actionBarWidgetTheme">@null</item>
        <item name="android:actionBarTheme">@android:style/ThemeOverlay.Material.Light</item>
        <item name="android:actionBarPopupTheme">@android:style/ThemeOverlay.Material.Dark</item>
    </style>
    <style name="Theme.HoloAccent.Light.ColoredActionBar">
        <item name="android:colorPrimary">@color/ha__accent_dark</item>
    </style>
    <style name="Theme.HoloAccent.Light.ColoredActionBar.Inverse" parent="Theme.HoloAccent.Light.DarkActionBar">
        <item name="android:colorPrimary">@color/ha__accent_dark</item>
    </style>

    <!-- Dialog themes -->
    <style name="Theme.HoloAccent.Dialog" parent="android:Theme.Material.Dialog">
        <item name="accentColor">@color/ha__accent_default</item>

        <item name="accentColorReference">@color/ha__accent</item>
        <item name="accentColorDarkReference">@color/ha__accent_dark</item>
        <item name="accentColorDrawable">@drawable/ha__solid_accent</item>
        <item name="accentColorDarkDrawable">@drawable/ha__solid_accent_dark</item>

        <item name="android:colorAccent">@color/ha__accent</item>
        <item name="android:colorPrimaryDark">@android:color/black</item>
        <item name="android:colorEdgeEffect">?android:colorAccent</item>

        <item name="buttonStyleColoredInverse">?android:attr/buttonStyle</item>

        <item name="android:actionBarStyle">@style/HoloAccent.ActionBar.Solid</item>
        <item name="android:datePickerStyle">@style/HoloAccent.DatePicker</item>
    </style>
    <style name="Theme.HoloAccent.Light.Dialog" parent="android:Theme.Material.Light.Dialog">
        <item name="accentColor">@color/ha__accent_default</item>

        <item name="accentColorReference">@color/ha__accent</item>
        <item name="accentColorDarkReference">@color/ha__accent_dark</item>
        <item name="accentColorDrawable">@drawable/ha__solid_accent</item>
        <item name="accentColorDarkDrawable">@drawable/ha__solid_accent_dark</item>

        <item name="android:colorAccent">@color/ha__accent</item>
        <item name="android:colorPrimary">#dddddd</item>
        <item name="android:colorPrimaryDark">@android:color/black</item>
        <item name="android:colorEdgeEffect">?android:colorAccent</item>

        <item name="buttonStyleColoredInverse">?android:attr/buttonStyle</item>

        <item name="android:actionBarStyle">@style/HoloAccent.ActionBar.Solid</item>
        <item name="android:datePickerStyle">@style/HoloAccent.DatePicker</item>
    </style>

</resources>
