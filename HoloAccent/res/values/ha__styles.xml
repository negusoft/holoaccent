<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Empty style to be able to define substyles (ex. 'HoloAccent.XXX') -->
    <style name="HoloAccent" />
    <style name="TextAppearance" />
    <style name="TextAppearance.HoloAccent" />
    
    <!-- Actionbar customization -->
    <style name="HoloAccent.ActionBar" parent="android:Widget.Holo.ActionBar">
        <item name="android:background">@drawable/ha__actionbar_background</item>
    </style>
    
    <!-- Action Mode customization -->
    <style name="HoloAccent.ActionButton.CloseMode" parent="android:Widget.Holo.ActionButton.CloseMode">
        <item name="android:background">?android:attr/actionBarItemBackground</item>
    </style>
    <style name="HoloAccent.ActionButton.CloseMode.Light" parent="android:Widget.Holo.Light.ActionButton.CloseMode">
        <item name="android:background">?android:attr/actionBarItemBackground</item>
    </style>
    
    <!-- Style for the tabs -->
    <style name="MyActionBarTabStyle" parent="android:Widget.Holo.ActionBar.TabView">
        <item name="android:background">@drawable/ha__tab_background</item>
    </style>
    <style name="MyActionBarTabStyle.Light" parent="android:Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/ha__tab_background</item>
    </style>
    <style name="MyActionBarTabStyle.Light.DarkActionBar" 
        parent="android:Widget.Holo.Light.ActionBar.TabView.Inverse">
        <item name="android:background">@drawable/ha__tab_background</item>
    </style>
    
    <!-- Button styles -->
    <style name="HoloAccent.Button" parent="android:Widget.Holo.Button">
        <item name="android:background">@drawable/ha__btn_default</item>
    </style>
    <style name="HoloAccent.Button.Small" parent="android:Widget.Holo.Button.Small">
        <item name="android:background">@drawable/ha__btn_default</item>
    </style>
    <style name="HoloAccent.ImageButton" parent="android:Widget.Holo.ImageButton">
        <item name="android:background">@drawable/ha__btn_default</item>
    </style>
    
    <!-- Button styles (light) -->
    <style name="HoloAccent.Light.Button" parent="android:Widget.Holo.Light.Button">
        <item name="android:background">@drawable/ha__btn_default</item>
    </style>
    <style name="HoloAccent.Light.Button.Small" parent="android:Widget.Holo.Light.Button.Small">
        <item name="android:background">@drawable/ha__btn_default</item>
    </style>
    <style name="HoloAccent.Light.ImageButton" parent="android:Widget.Holo.Light.ImageButton">
        <item name="android:background">@drawable/ha__btn_default</item>
    </style>
    
    <!-- Toogle button -->
    <style name="Widget.HoloAccent.Button.Toggle" parent="android:Widget.Holo.Button.Toggle">
        <item name="android:background">@drawable/ha__btn_toggle</item>
    </style>
    <style name="Widget.HoloAccent.Light.Button.Toggle" parent="android:Widget.Holo.Light.Button.Toggle">
        <item name="android:background">@drawable/ha__btn_toggle</item>
    </style>
    
    <!-- Colored button styles -->
    <style name="HoloAccent.Button.Colored" parent="android:Widget.Holo.Button">
        <item name="android:background">@drawable/ha__btn_default_colored</item>
    </style>
    <style name="HoloAccent.Button.Small.Colored" parent="android:Widget.Holo.Button.Small">
        <item name="android:background">@drawable/ha__btn_default_colored</item>
    </style>
    <style name="HoloAccent.ImageButton.Colored" parent="android:Widget.Holo.ImageButton">
        <item name="android:background">@drawable/ha__btn_default_colored</item>
    </style>
    
    <!-- Colored button styles (Light) -->
    <style name="HoloAccent.Light.Button.Colored" parent="android:Widget.Holo.Light.Button">
        <item name="android:background">@drawable/ha__btn_default_colored</item>
    </style>
    <style name="HoloAccent.Light.Button.Small.Colored" parent="android:Widget.Holo.Light.Button.Small">
        <item name="android:background">@drawable/ha__btn_default_colored</item>
    </style>
    <style name="HoloAccent.Light.ImageButton.Colored" parent="android:Widget.Holo.Light.ImageButton">
        <item name="android:background">@drawable/ha__btn_default_colored</item>
    </style>
    
    <!-- Bright colored button styles -->
    <style name="HoloAccent.Button.Colored.Bright" parent="android:Widget.Holo.Button">
        <item name="android:background">@drawable/ha__btn_default_colored_bright</item>
    </style>
    <style name="HoloAccent.Button.Small.Colored.Bright" parent="android:Widget.Holo.Button.Small">
        <item name="android:background">@drawable/ha__btn_default_colored_bright</item>
    </style>
    <style name="HoloAccent.ImageButton.Colored.Bright" parent="android:Widget.Holo.ImageButton">
        <item name="android:background">@drawable/ha__btn_default_colored_bright</item>
    </style>
    
    <!-- Bright colored button styles (Light) -->
    <style name="HoloAccent.Light.Button.Colored.Bright" parent="android:Widget.Holo.Light.Button">
        <item name="android:background">@drawable/ha__btn_default_colored_bright</item>
    </style>
    <style name="HoloAccent.Light.Button.Small.Colored.Bright" parent="android:Widget.Holo.Light.Button.Small">
        <item name="android:background">@drawable/ha__btn_default_colored_bright</item>
    </style>
    <style name="HoloAccent.Light.ImageButton.Colored.Bright" parent="android:Widget.Holo.Light.ImageButton">
        <item name="android:background">@drawable/ha__btn_default_colored_bright</item>
    </style>

    <!-- Spinner styles -->
    <style name="HoloAccent.Spinner" parent="android:Widget.Holo.Spinner">
        <item name="android:background">@drawable/ha__spinner_background</item>
    </style>
    <style name="HoloAccent.Spinner.Light" parent="android:Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/ha__spinner_background_light</item>
    </style>
    <style name="HoloAccent.Spinner.ActionBar">
        <item name="android:background">@drawable/ha__ab_spinner_background</item>
    </style>
    <style name="HoloAccent.Spinner.Light.ActionBar">
        <item name="android:background">@drawable/ha__ab_spinner_background_light</item>
    </style>
    
    <!-- SeekBar styles -->
    <style name="HoloAccent.SeekBar" parent="android:Widget.Holo.SeekBar">
        <item name="android:progressDrawable">@drawable/ha__scrubber_progress_horizontal</item>
        <item name="android:indeterminateDrawable">@drawable/ha__scrubber_progress_horizontal</item>
        <item name="android:thumb">@drawable/ha__scrubber_control_selector</item>
    </style>
    <style name="HoloAccent.SeekBar.Light" parent="android:Widget.Holo.Light.SeekBar">
        <item name="android:progressDrawable">@drawable/ha__scrubber_progress_horizontal_light</item>
        <item name="android:indeterminateDrawable">@drawable/ha__scrubber_progress_horizontal_light</item>
        <item name="android:thumb">@drawable/ha__scrubber_control_selector</item>
    </style>
    
    <!-- AutoCompleteTextView styles -->
    <style name="HoloAccent.AutoCompleteTextView" parent="android:Widget.Holo.AutoCompleteTextView">
        <item name="android:dropDownSelector">?android:attr/listChoiceBackgroundIndicator</item>
    </style>
    <style name="HoloAccent.AutoCompleteTextView.Light" parent="android:Widget.Holo.Light.AutoCompleteTextView">
        <item name="android:dropDownSelector">?android:attr/listChoiceBackgroundIndicator</item>
    </style>
    
    <!-- ListPopupWindow styles -->
    <style name="HoloAccent.ListPopupWindow" parent="android:Widget.Holo.ListPopupWindow">
        <item name="android:dropDownSelector">?android:attr/listChoiceBackgroundIndicator</item>
    </style>
    <style name="HoloAccent.ListPopupWindow.Light" parent="android:Widget.Holo.Light.ListPopupWindow">
        <item name="android:dropDownSelector">?android:attr/listChoiceBackgroundIndicator</item>
    </style>
    
    <!-- Horizontal progress bar (must be set on the layout XML directly) -->
    <style name="HoloAccent.ProgressBar.Horizontal" parent="android:Widget.Holo.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/ha__progress_horizontal</item>
        <item name="android:indeterminateDrawable">@drawable/ha__progress_indeterminate_horizontal</item>
    </style>
    <style name="HoloAccent.Light.ProgressBar.Horizontal" parent="android:Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/ha__progress_horizontal_light</item>
        <item name="android:indeterminateDrawable">@drawable/ha__progress_indeterminate_horizontal</item>
    </style>
    
    <!-- Horizontal progress bar like the native one (must be set on the layout XML directly) -->
    <style name="HoloAccent.ProgressBar.Horizontal.Legacy">
        <item name="android:indeterminateDrawable">@drawable/ha__progress_indeterminate_horizontal_legacy</item>
    </style>
    <style name="HoloAccent.Light.ProgressBar.Horizontal.Legacy">
        <item name="android:indeterminateDrawable">@drawable/ha__progress_indeterminate_horizontal_legacy</item>
    </style>
    
    <!-- Text appearance -->
    <style name="TextAppearance.HoloAccent.DialogWindowTitle" parent="android:TextAppearance.Holo.DialogWindowTitle">
        <item name="android:textColor">?attr/accentColor</item>
    </style>
    <style name="TextAppearance.HoloAccent.Widget.DropDownItem" parent="android:TextAppearance.Holo.Widget.DropDownItem">
        <item name="android:textColor">?attr/accentColor</item>
    </style>
    
    <!-- Dialog styles -->
    <style name="DialogWindowTitle">
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textAppearance">@style/TextAppearance.HoloAccent.DialogWindowTitle</item>
    </style>
    <style name="DialogWindowTitle.HoloAccent">
    </style>
    
    <!-- AccentSwitch style. It doens't extend any Holo style -->
    <style name="HoloAccent.AccentSwitch">
        <item name="android:track">@drawable/ha__switch_track</item>
        <item name="android:thumb">@drawable/ha__switch_thumb</item>
<!--         <item name="android:textOn">@string/ha__switchOn</item> -->
<!--         <item name="android:textOff">@string/ha__switchOff</item> -->
        <item name="android:thumbTextPadding">12dip</item>
        <item name="android:switchMinWidth">@dimen/ha__switch_min_width</item>
        <item name="android:switchPadding">16dip</item>
        <item name="android:switchTextAppearance">@style/TextAppearance.HoloAccent.Switch</item>
        <item name="android:focusable">true</item>
    </style>
    <style name="HoloAccent.AccentSwitch.Light">
        <item name="android:track">@drawable/ha__switch_track_light</item>
        <item name="android:switchTextAppearance">@style/TextAppearance.HoloAccent.Switch.Light</item>
    </style>
    <style name="TextAppearance.HoloAccent.Switch">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="TextAppearance.HoloAccent.Switch.Light">
        <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
    </style>
    
    <!-- AccentSwitch style. It doens't extend any Holo style -->
    <style name="HoloAccent.AccentSearchView">
        <item name="android:background">@drawable/ha__searchview_textfield</item>
    </style>
    <style name="HoloAccent.AccentSearchView.Light">
        <item name="android:background">@drawable/ha__searchview_textfield_light</item>
    </style>

</resources>
