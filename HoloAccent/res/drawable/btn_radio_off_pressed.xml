<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    
    <!-- Transparent rectanche to set the size of the drawable -->
    <item>
        <shape android:shape="rectangle" >
            <solid
        		android:color="@android:color/transparent" />
            <size
        		android:width="@dimen/radio_size"
        		android:height="@dimen/radio_size" />
        </shape>
    </item>
    
    <!-- Background colored fill -->
    <item android:drawable="@drawable/circle_pressed"/>
    
    <!-- glow around -->
    <item>
        <shape android:shape="ring"
            android:innerRadius="0dp"
            android:thickness="@dimen/radio_glow_thickness"
            android:useLevel="false" >
        <gradient
            android:type="radial"
            android:gradientRadius="@dimen/radio_pressed_gradient_radius"
            android:startColor="#28ffffff"
            android:centerColor="#18ffffff"
            android:endColor="#0000" />
        </shape>
    </item>
    
    <!-- Outer ring -->
    <item>
        <shape
	        android:shape="ring"
	        android:innerRadius="@dimen/radio_outer_ring_inner_radius"
	        android:thickness="@dimen/radio_outer_ring_thickness"
	        android:useLevel="false">
            <solid android:color="#6fff" />
	    </shape>
    </item>
    
</layer-list>