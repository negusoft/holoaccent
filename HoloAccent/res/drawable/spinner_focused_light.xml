<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    
    <!-- background -->
    <item>
        <shape android:shape="rectangle" >
            <corners android:radius="@dimen/btn_fill_corner_radius"/>
            <solid android:color="@color/key_focused" />
        </shape>
    </item>
    
    <!-- border -->
    <item>
        <shape android:shape="rectangle" >
			<solid android:color="#0000"/>
            <corners android:radius="@dimen/btn_border_corner_radius"/>
            <stroke
                android:width="@dimen/btn_border_width"
                android:color="@color/key_focused" />
        </shape>
    </item>
    
    <item>
        <nine-patch android:src="@drawable/spinner_default_holo_light"/>
    </item>
    
</layer-list>