<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    
    <!-- Transparent rectanche to set the size of the drawable -->
    <item>
        <shape android:shape="rectangle" >
            <solid
        		android:color="@android:color/transparent" />
            <size
        		android:width="@dimen/radio_size"
        		android:height="@dimen/radio_size" />
        </shape>
    </item>
    
    <!-- Outer ring -->
    <item>
        <shape
	        android:shape="ring"
	        android:innerRadius="@dimen/radio_outer_ring_inner_radius"
	        android:thickness="@dimen/radio_outer_ring_thickness"
	        android:useLevel="false">
            <solid android:color="@color/radio_outer_ring" />
	    </shape>
    </item>
    
</layer-list>