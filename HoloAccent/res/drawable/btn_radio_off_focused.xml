<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    
    <!-- Based on the non focused version -->
	<item android:drawable="@drawable/btn_radio_off" />
    
    <!-- Focus ring -->
    <item>
        <shape
	        android:shape="ring"
	        android:innerRadius="@dimen/radio_focus_ring_inner_radius"
	        android:thickness="@dimen/radio_focus_ring_thickness"
